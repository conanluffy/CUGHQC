.container {
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #f7f7f7;
}

.ks-header {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 50rpx 0;
}

.ks-text {
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  padding-left: 25rpx;
}

.ks-header-title {
  font-size: 20pt;
  font-weight: bold;
  line-height: 150%;
  margin-bottom: 15rpx;
  color: #222;
}

.ks-header-info {
  font-size: 11pt;
  line-height: 160%;
  color: #888;
}

.ks-bg {
  display: block;
  width: 200rpx;
  height: 200rpx;
  padding-right: 5rpx;
  opacity: 0.3;
}

.ks-class-ctn {
  display: flex;
  flex-flow: column nowrap;
  align-items: stretch;
}

.ks-name {
  font-size: 12pt;
  line-height: 225%;
  letter-spacing: 1px;
  transition: color 0.15s ease-in-out;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #7acfa6;
}

.ks-class-item {
  display: flex;
  flex-direction: column;
  font-size: 11pt;
  padding: 0 40rpx;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 3px;
}

.ks-detail {
  flex-direction: column;
  overflow: hidden;
  padding: 0;
}

.ks-detail-item {
  display: flex;
  align-items: center;
  padding: 25rpx 5rpx 20rpx;
  border-top: 1px solid #eee;
}

.ks-detail-label {
  color: #888;
  width: 55pt;
}

.ks-detail-content {
  flex: 1;
}
