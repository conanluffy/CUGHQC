.container {
  background-color: #e5e5e5;
  color: balck;
  font-size: 8pt;
  margin: 0;
}

.top {
  background-color: #fff;
  font-size: 12pt;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
}

.content-bd {
  margin: 20rpx 0;
  background-color: #fff;
}

.title {
  margin: 0;
  text-align: center;
  font-size: 11pt;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid gray;
  color: #73b4ef;
  font-weight: bold;
}

.content-hd, .content-book {
  text-align: center;
  display: flex;
  flex-direction: row;
  padding: 10rpx 0;
  align-items: center;
  margin: 0 15rpx;
}

.content-book {
  border-top: 1rpx dotted gray;
}

.left {
  width: 430rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.middle, .right {
  width: 150rpx;
  text-align: left;
}

.middle {
  margin-left: 10rpx;
}
