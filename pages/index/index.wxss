page{
    background: #f6f6f6;
}
.nav {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  padding: 15rpx 10rpx 10rpx;
  margin-bottom: 20rpx;
  min-height: 350rpx;
  overflow: hidden;
}
.item {
  display: flex;
  flex-flow: column wrap;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  width: 25%;
  height: 185rpx;
}
.item image {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: 15rpx auto;
}
.item text{
  display: block;
  margin: 5rpx;
}

/*卡片列表*/
.main-card {
  padding-bottom: 300rpx;
}
.main-card-item{
  display: flex;
  flex-direction: column;
  background: #fff;
  border-top: 1rpx solid #e5e5e5;
  border-bottom: 1rpx solid #e5e5e5;
  margin-bottom: 20rpx;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: bottom center;
  overflow: hidden;
}
.card-item-hd{
  position: relative;
  display: flex;
  align-items: center;
  height: 75rpx;
  border-bottom: 1rpx solid #e5e5e5;
  margin-left: 30rpx;
}
.card-item-icon{
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}
.card-item-name{
  font-size: 11pt;
  font-weight: bold;
  letter-spacing: 2px;
}
.card-item-bd{
  padding: 20rpx 25rpx 30rpx 0;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}
.card-info-hd{
  display: flex;
  justify-content: space-between;
}
.card-info-left{
  display: flex;
  flex-direction: column;
}
.card-info-right{
  display: flex;
  color: #acacac;
  flex-direction: column;
}
.card-item-open{
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: #7f848a;
  height: 90rpx;
  border-top: 1rpx solid #e5e5e5;
  margin-top: -1rpx;
}
/**今日课表**/
.main-card-item#kb .card-item-bd{
  padding: 0;
  margin-right: 25rpx;
}
.daychange {
  position: relative;
  height: 75rpx;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
}
.daychange-item {
  position: absolute;
  display: inherit;
  width: 33%;
  text-align: center;
  line-height: 75rpx;
  font-size: 10pt;
}
.theday {
  color: #1AAD16;
  font-size: 12pt;
  font-weight: bold;
}
.today {
  position: absolute;
  right: 10rpx;
}
.kb-nothing{
  align-items: center;
  justify-content: center;
  font-size: 11pt;
  min-height: 150rpx;
}
.kb-item{
  position: relative;
  display: flex;
  height: 120rpx;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px dotted #e5e5e5;
}
.kb-item-right {
  position: absolute;
  left: 100rpx;
  margin-top: 10rpx; 
}
.kb-item-what{
  font-size: 12pt;
  line-height: 120%;
  color: #555;
  white-space: nowrap;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}
.kb-item-when{
  line-height: 100%;
  color: #666;
}
.kb-item-where{
  font-size: 10pt;
  color: #999;
}

/**借阅信息**/
#jy .header{
  height:75rpx;
  line-height:75rpx;
  padding-left: 30rpx;
  border-bottom: 1px solid #e5e5e5;
}
#jy .header .right{
  float: right;
  width: 150rpx;
  color: #acacac;
}
.jy-item-bd {
  padding-left: 30rpx;
}
.jy-item {
  min-height:70rpx;
  line-height:70rpx;
  border-bottom:1px dotted #e5e5e5; 
}
.jy-item-right {
  float: right;
  width: 150rpx;
  color: #acacac;
}
.jy-item-left {
  float:left;
  width: 550rpx;
  line-height: 70rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
/**一卡通**/
.ykt-balance{
  display: flex;
  align-items: flex-end;
  justify-content: center;
  font-weight: bold;
  padding: 25rpx 0 30rpx;
}
.ykt-balance-text{
  font-size: 17pt;
  line-height: 2;
  color: #999;
}
.ykt-balance-value{
  font-size: 58pt;
  line-height: 1;
  padding: 0 20rpx;
  color: #ffbf92;
}
.room {
  height: 75rpx;
  padding-left: 30rpx;
  border-bottom:1px solid #e5e5e5;
  font-size: 15pt;
  line-height: 75rpx;
  letter-spacing: 1px;
  color: #acacac;
}