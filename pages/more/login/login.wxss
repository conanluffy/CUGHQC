page {
  background: #f4f4f4;
  padding: 0;
}
.container {
  background: #f4f4f4;
  padding: 0;
  height: 100%;
  overflow: hidden;
}
.hd {
  width: 100%;
  height: 360rpx;
}
.logo {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 100rpx auto;
  margin-bottom: 60rpx;
}
