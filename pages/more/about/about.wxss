page{
    background-color: #f6f6f6;
    padding: 0px;
}
.header {
    height: 300rpx;
}
.logo {
    display: block;
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    margin: 40rpx auto;
    margin-bottom:10rpx;
}
.name {
    font-size: 13pt;
    text-align: center;
    line-height: 150%;
}
.nav {
    height:100rpx;
    background:#fff;
    display:flex;
    align-items:center;
    padding:0 45rpx;
    box-sizing:border-box;
    font-size:11pt;
    color:#666;
    border-bottom:1px #e5e5e5;
}
.nav-left {
    line-height: 100rpx;
}
.describe {
    width:100%;
    box-sizing:border-box;
    padding:20rpx 45rpx 30rpx;
    display:flex;
    flex-flow:column nowrap;
    color:#545454;
    line-height:175%;
    background:#fff;
    margin-top:15rpx;
    border-top:1px #e5e5e5 solid;
    border-bottom:1px #e5e5e5;
}
.des-list {
    position: relative;
    display:flex;
    flex-direction:column;
    border-left:8rpx solid #ddd;
    padding-left:15rpx;
    color:#777;
    margin-bottom:15rpx;
    font-size:10pt;
}
.list-left {
    color: gray;
}
.list-right {
    position: absolute;
    left: 150rpx;
    color: #333;
}
.des-content {
    padding-bottom:15rpx;
}
.footer {
    display:flex;
    flex-direction:column;
    font-size:9pt;
    line-height:150%;
    text-align:center;
    padding:100rpx 0 15rpx;
    color:#aaa;
}